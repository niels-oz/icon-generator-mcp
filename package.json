{
  "name": "icon-generator-mcp",
  "version": "1.0.0",
  "description": "Zero-config MCP server for AI-powered SVG icon generation - works seamlessly within Claude Code and Gemini CLI environments",
  "main": "dist/server.js",
  "bin": {
    "icon-generator-mcp": "bin/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:regression": "jest test/regression/code-review-icon-generation.test.ts --timeout=30000",
    "start": "node bin/mcp-server.js",
    "prepublishOnly": "npm run build && npm test",
    "postinstall": "node -e \"console.log('\\nâœ… Icon Generator MCP Server installed successfully!\\n\\nSystem Requirements:\\n- macOS (Intel or Apple Silicon)\\n- Potrace: brew install potrace\\n- Claude Code or Gemini CLI\\n\\nUsage: The server will be automatically available in your LLM tool.\\n')\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "chalk": "^5.5.0",
    "jimp": "^0.22.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^18.17.0",
    "@types/node-fetch": "^2.6.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin"
  ],
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "mcp",
    "icon",
    "svg",
    "ai",
    "claude",
    "gemini",
    "generator",
    "developer-tools",
    "automation",
    "zero-config",
    "png-to-svg",
    "potrace"
  ],
  "author": "Icon Generator MCP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/icon-generator-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/icon-generator-mcp/issues"
  },
  "homepage": "https://github.com/your-org/icon-generator-mcp#readme",
  "preferGlobal": true
}
