{
  "name": "icon-generator-mcp",
  "version": "0.4.0",
  "description": "Zero-dependency MCP server for AI-powered SVG icon generation with multimodal LLM support",
  "main": "dist/server.js",
  "bin": {
    "icon-generator-mcp": "bin/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:regression": "jest test/regression/code-review-icon-generation.test.ts --timeout=30000",
    "start": "node bin/mcp-server.js",
    "prepublishOnly": "npm run build && npm test",
    "postinstall": "node -e \"console.log('\\nâœ… Icon Generator MCP Server installed successfully!\\n\\nZero Dependencies - No System Requirements!\\n- Works with multimodal LLMs (Claude Code, Gemini Pro Vision, GPT-4V)\\n- PNG visual context support (no conversion needed)\\n- SVG text reference support\\n\\nUsage: The server will be automatically available in your LLM tool.\\n')\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "chalk": "^5.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^18.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
